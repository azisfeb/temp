<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <div class="container">
            <h3 align="center">User Data</h3>
            <br>
            <form action="/edit" method="post">
                <input type="hidden" value="<%= users[0].id %>" name="userid" id="userid">
                <div class="form-group row">
                    <label for="uname" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="uname" name="uname" placeholder="Username" value="<%= users[0].username %>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="pass" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="pass" name="pass" placeholder="Password" value="<%= users[0].password %>">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/" class="btn btn-danger">Back</a>
            </form>
        </div>
    </body>
    <footer>
        <% include ../partials/footer %>
    </footer>
</html>